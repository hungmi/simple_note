#!/usr/bin/env bash
cloudflared tunnel --config simple-note.yml run new-website > /dev/null &
RAILS_ENV=production bin/rails assets:clobber
RAILS_ENV=production bin/rails assets:precompile
RAILS_ENV=production bin/rails server -p 3087 &


<article style="display: flex; justify-content: space-between;">
    <%= link_to edit_admin_payment_path(payment) do %>
        <%= payment.total.to_i %><br>
        <%= payment.note %>
    <% end %>
    <%= payment.created_at.strftime("%m/%d %H:%M") %>
    <%= button_to [:admin, payment], method: :delete, form: {data: { turbo_confirm: I18n.t("text.confirm_destroy") }, style: "margin-bottom: 0px;"}, class: "secondary", style: "margin-bottom: 0px;" do %>
        &#10005;
    <% end %>
</article>
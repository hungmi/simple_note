<div class="card mb-1 <%= 'border-primary' if payment.created_at.to_date == Time.zone.today %>">
  <!-- <div class="card-header">Header</div> -->
  <%#= payment.created_at.strftime("%F") %>
  <div class="card-body pr-2 py-2 d-flex justify-content-between align-content-between flex-wrap">
		<div class="mr-auto" style="font-size: 22px; flex: 0 0 50%;">
			<%= link_to payment.total.to_i, edit_admin_payment_path(payment) %></div>
		<div class="d-flex justify-content-between align-items-center" style="flex: 0 0 50%;">
			<span class="text-muted" style="font-size: 16px;"><%= "##{payment.notebook.name}" if payment.notebook_id.present? %> <%= "##{payment.recorder.name}" if payment.user_id.present? %></span>
			<%= link_to I18n.t('text.destroy'), [:admin, payment], method: :delete, data: { confirm: I18n.t("text.confirm_destroy") }, class: "text-danger card-link mr-2" %>
		</div>
		<div style="flex: 0 0 100%;">
	  	<%= payment.note %>
	  </div>
  </div>
</div>
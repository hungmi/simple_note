<h1 class="h2">
  <%= Payment.model_name.human %><%= I18n.t("text.index") %>
  <% unless not_desktop? %>
	  <%= link_to "#paymentAdvanceSearch", class: "d-print-none btn btn-link float-right d-none d-lg-inline-block", data: { toggle: "collapse" } do %>
	  	<i class="material-icons">&#xE152;</i>
	  <% end %>
	<% end %>
</h1>

<% unless not_desktop? %>
	<div class="d-print-none mb-4 collapse <%= 'show' if params[:q].present? %>" id="paymentAdvanceSearch">
		<div class="card">
			<div class="card-body">
				<%= render "filter" %>
			</div>
		</div>
	</div>
	<div class="mt-2 mb-4 text-right <%= 'd-none' unless params[:q].present? %>">
		<%= I18n.t("text.search_result") %>ï¼š<%= @payments.size %>
	</div>
<% end %>

<%== pagy_bootstrap_nav(@pagy) %>
<div class="row">
	<% if not_desktop? %>
  	<%= render @payments %>
  <% else %>
  	<%= render partial: "payments_table", locals: { payments: @payments } %>
  <% end %>
</div>
<%== pagy_bootstrap_nav(@pagy) %>

<div class="btn-abs-wrapper">
	<%= link_to new_admin_payment_path, class: "btn btn-success btn-icon--circle" do %>
		<i class="material-icons">&#xE145;</i>
	<% end %>
	<% if not_desktop? %>
		<%= link_to "#", class: "btn btn-secondary d-lg-none btn-icon--circle", data: { toggle: "modal", target: "#searchModal" } do %>
	    <i class="material-icons">&#xE8B6;</i>
	  <% end %>
  <% end %>
</div>

<% if not_desktop? %>
  <%= render "admin/common/search_modal" %>
<% end %>
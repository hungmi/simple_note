<table class="table table-hover" id="js-users-tablesort">
	<thead>
		<tr>
			<th><%= User.human_attribute_name("name") %></th>
			<th><%= User.human_attribute_name("role") %></th>
			<th><%= User.human_attribute_name("password") %></th>
			<th><%= User.human_attribute_name("password_confirmation") %></th>
		</tr>
	</thead>
	<tbody>
		<% users.map do |user| %>
			<tr>
				<td><%= user.name %></td>
				<td><%= user.role %></td>
				<td><%= user.password %></td>
				<td><%= user.password_confirmation %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<script type="text/javascript">
	document.addEventListener("DOMContentLoaded", function() {
		new Tablesort(document.getElementById('js-users-tablesort'), {
	    descending: true
	  });
	})
</script>
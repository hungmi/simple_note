<%= form_with model: [:admin, project], local: true, class: "mb-5" do |f| %>
  <div class="row">
    <div class="offset-lg-3 col-lg-6">
      <div class="form-group <%= project.errors[:name].present? ? 'has-danger' : '' %>">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control #{project.errors[:name].present? ? 'is-invalid' : ''}" %>
        <% if project.errors[:name].present? %>
    	    <div class="invalid-feedback">
    	      <%= project.errors[:name].join(", ") %>
    	    </div>
        <% end %>
      </div>

      <div class="form-group <%= project.errors[:note].present? ? 'has-danger' : '' %>">
        <%= f.label :note %>
        <%= f.rich_text_area :note, class: "form-control #{project.errors[:note].present? ? 'is-invalid' : ''}" %>
        <% if project.errors[:note].present? %>
          <div class="invalid-feedback">
            <%= project.errors[:note].join(", ") %>
          </div>
        <% end %>
      </div>
    
      <%= link_to I18n.t('text.cancel'), admin_projects_path, class: "btn btn-link text-danger" %>
      <%= f.submit class: "btn btn-primary float-right" %>
    </div>
  </div>
<% end %>